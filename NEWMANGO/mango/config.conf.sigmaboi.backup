bind=ALT+SHIFT,j,movewindow,left
bind=ALT+SHIFT,k,movewindow,down
bind=ALT+SHIFT,i,movewindow,up
bind=ALT+SHIFT,l,movewindow,right

# Tag switching
bind=ALT,1,view,1
bind=ALT,2,view,2
bind=ALT,3,view,3
bind=ALT,4,view,4
bind=ALT,5,view,5
bind=ALT,6,view,6
bind=ALT,7,view,7
bind=ALT,8,view,8
bind=ALT,9,view,9
