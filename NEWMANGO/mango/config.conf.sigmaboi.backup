# Move to tag
bind=ALT+SHIFT,1,tag,1
bind=ALT+SHIFT,2,tag,2
bind=ALT+SHIFT,3,tag,3
bind=ALT+SHIFT,4,tag,4
bind=ALT+SHIFT,5,tag,5
bind=ALT+SHIFT,6,tag,6
bind=ALT+SHIFT,7,tag,7
bind=ALT+SHIFT,8,tag,8
bind=ALT+SHIFT,9,tag,9
bind=ALT+SHIFT,0,tag,10

# Move to tag and follow
bind=ALT+SHIFT+CTRL,1,tagandview,1
bind=ALT+SHIFT+CTRL,2,tagandview,2
bind=ALT+SHIFT+CTRL,3,tagandview,3
bind=ALT+SHIFT+CTRL,4,tagandview,4
bind=ALT+SHIFT+CTRL,5,tagandview,5
bind=ALT+SHIFT+CTRL,6,tagandview,6
bind=ALT+SHIFT+CTRL,7,tagandview,7
bind=ALT+SHIFT+CTRL,8,tagandview,8
bind=ALT+SHIFT+CTRL,9,tagandview,9
bind=ALT+SHIFT+CTRL,0,tagandview,10

# Toggle floating and fullscreen
bind=ALT,Space,togglefloating,
bind=ALT,f,togglefullscreen,

# Reload config
bind=ALT+SHIFT,c,reload_config,

# Exit
bind=ALT+SHIFT,e,quit,

