bind=ALT,q,killclient,

# Applications
bind=ALT,b,spawn,flatpak run com.brave.Browser
bind=ALT,b,spawn,flatpak run com.brave.Browser

bind=ALT,s,spawn,flatpak run com.spotify.Client
bind=ALT,s,spawn,flatpak run com.spotify.Client

bind=ALT+SHIFT,b,spawn,flatpak run net.waterfox.waterfox
bind=ALT+SHIFT,b,spawn,flatpak run net.waterfox.waterfox

bind=ALT,e,spawn,nemo
bind=ALT,e,spawn,nemo

bind=ALT,a,spawn,wofi --show drun
bind=ALT,a,spawn,wofi --show drun

